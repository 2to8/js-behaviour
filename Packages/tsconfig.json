{
    "compilerOptions": {
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "declaration": false,
        "module": "ESNext",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "ESNext",
        "allowUmdGlobalAccess": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "lib": [
            //"es2015",
            "dom",
            "ESNext"
        ],
        "typeRoots": [
            "typings"
        ],
        "allowJs": false,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "/*"
            ],
            "csharp": [
                "../typings/csharp"
            ],
            "puerts": [
                "../typings/puerts"
            ]
        },
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
